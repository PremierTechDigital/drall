#!/usr/bin/env php
<?php

/**
 * @file
 * Drall entrypoint.
 */

if (php_sapi_name() !== 'cli') exit;

use Drall\Drall;

foreach ([
  // Development environment.
  __DIR__ . '/../vendor/autoload.php',
  // Global installation.
  __DIR__ . '/../../../autoload.php',
] as $candidate) {
  if (is_file($candidate)) {
    require_once $candidate;
  }
  unset($candidate);
}

try {
  $drall = new Drall();
  $drall->run();
}
catch (Exception $e) {
  echo "ERROR {$e->getCode()}: {$e->getMessage()}";
  exit(1);
}

exit(0);
